<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvNameRegion"
        style="@style/TextViewStyle"
        android:layout_width="0dp"
        android:layout_marginEnd="24dp"
        android:text="@string/dummy_name_region"
        app:layout_constraintEnd_toStartOf="@id/tvCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCode"
        style="@style/TextViewStyle"
        android:text="@string/dummy_code"
        app:layout_constraintBottom_toBottomOf="@id/tvNameRegion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvNameRegion" />

    <TextView
        android:id="@+id/tvCapital"
        style="@style/TextViewStyle"
        android:layout_marginTop="8dp"
        android:text="@string/dummy_capital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameRegion" />

</androidx.constraintlayout.widget.ConstraintLayout>